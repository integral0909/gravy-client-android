<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divideGrey"
    tools:layout_editor_absoluteY="@dimen/pre_menu_layout_absolute">

    <TextView
        android:id="@+id/preMenuTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pre_menu_tv_title_margin_end"
        android:layout_marginStart="@dimen/pre_menu_tv_title_margin_start"
        android:layout_marginTop="@dimen/pre_menu_tv_title_margin_top"
        android:fontFamily="@font/avenir_next_bold"
        android:text="@string/pre_menu_tv_title_text"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/pre_menu_tv_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/preMenuCardFirst"
        style="@style/preMenuCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pre_menu_card_iv_next_margin_end"
        android:layout_marginStart="@dimen/pre_menu_card_iv_margin_start"
        android:layout_marginTop="@dimen/pre_menu_card_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preMenuTvTitle">

        <include layout="@layout/card_pre_menu_content" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/preMenuCardSecond"
        style="@style/preMenuCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pre_menu_card_iv_next_margin_end"
        android:layout_marginStart="@dimen/pre_menu_card_iv_margin_start"
        android:layout_marginTop="@dimen/pre_menu_card_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preMenuCardFirst">

        <include layout="@layout/card_pre_menu_content" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/preMenuCardThird"
        style="@style/preMenuCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pre_menu_card_iv_next_margin_end"
        android:layout_marginStart="@dimen/pre_menu_card_iv_margin_start"
        android:layout_marginTop="@dimen/pre_menu_card_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preMenuCardSecond">

        <include layout="@layout/card_pre_menu_content" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>